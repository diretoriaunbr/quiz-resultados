<script>
  // Pega ?score= da URL
  const params = new URLSearchParams(window.location.search);
  const score = parseInt(params.get('score')) || 0;

  // Calcula percentual (15 questÃµes)
  const percentual = Math.round((score / 15) * 100);

  // Mostra a faixa correspondente
  if (percentual === 100) {
    document.getElementById('faixa100').style.display = 'block';
  } else if (percentual >= 80) {
    document.getElementById('faixa80').style.display = 'block';
  } else {
    document.getElementById('faixaBaixo').style.display = 'block';
  }
</script>

